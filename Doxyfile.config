# 启用 Markdown 支持
MARKDOWN_SUPPORT = YES

# 递归搜索子目录
RECURSIVE = YES

# 启用需要的输出格式
GENERATE_HTML = YES
GENERATE_LATEX = NO
GENERATE_XML = NO
GENERATE_RTF = NO

# 文件模式
FILE_PATTERNS = *.cpp \
                *.h \
                *.hpp \
                *.md

# 包含代码文件与主页面
INPUT = include/nbt_cpp \
        docs/ROOT.md

# 设置主页面文件
USE_MDFILE_AS_MAINPAGE = docs/ROOT.md

# 设置输出目录
OUTPUT_DIRECTORY = docs/doxygen
